{
  "name": "com.checheza.checheza.app",
  "version": "1.0.0",
  "displayName": "Checheza",
  "cordova": {
    "platforms": [
      "browser",
      "android"
    ],
    "plugins": {
      "cordova-plugin-whitelist": {},
      "cordova-plugin-file": {},
      "cordova-plugin-crosswalk-webview": {
        "XWALK_VERSION": "23+",
        "XWALK_LITEVERSION": "xwalk_core_library_canary:17+",
        "XWALK_COMMANDLINE": "--disable-pull-to-refresh-effect",
        "XWALK_MODE": "embedded",
        "XWALK_MULTIPLEAPK": "true"
      },
      "cordova-android-support-gradle-release": {
        "ANDROID_SUPPORT_VERSION": "26.+"
      }
    }
  },
  "dependencies": {
    "concurrently": "^4.0.1",
    "cordova-android": "^6.2.3",
    "cordova-android-support-gradle-release": "^1.4.4",
    "cordova-browser": "^5.0.3",
    "cordova-plugin-browsersync": "^1.1.0",
    "cordova-plugin-compat": "^1.2.0",
    "cordova-plugin-crosswalk-webview": "^2.4.0",
    "cordova-plugin-file": "^4.3.3",
    "cordova-plugin-whitelist": "^1.3.3",
    "jsdoc": "^3.5.5",
    "jsdoc-to-markdown": "^4.0.1"
  },
  "scripts": {
    "start": "concurrently --kill-others \"cd browser-debug && PORT=27000 node browser-debug.js\" \"cordova run browser -- --live-reload --ignore=www/static/browserDbgAddr.js\""
  }
}